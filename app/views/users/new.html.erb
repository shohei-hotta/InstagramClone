<% if @user.errors.present? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>
<div class="user-box">
  <div class="user-heading">
    <h1>InstagramClone</h1>
  </div>
  <div class="user-form">
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード（確認用）" %>
      </div>
      <%= f.submit "登録", class: "user-button" %>
    <% end %>
  </div>
</div>
<div class="user-box">
  <p>アカウントをお持ちですか？<%= link_to "ログインする", new_session_path %></p>
</div>