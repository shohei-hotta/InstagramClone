<div>
  <div>
    <h1>投稿の詳細</h1>
  </div>
  <div>
    <%= link_to "戻る", blogs_path %>
  </div>
  <div>
    <p>投稿者</p>
  </div>
  <div>
    <p>ユーザー名</p>
  </div>
  <div>
    <p>内容</p>
  </div>
  <div>
    <p>画像</p>
    <%= @blog.content %>
  </div>
  <div>
    <p>投稿日時</p>
  </div>
  <div>
    <%= @blog.created_at.strftime("%Y年%m月%d日 %H:%M") %>
  </div>
  <div>
    <p>更新日時</p>
  </div>
  <div>
    <%= @blog.updated_at.strftime("%Y年%m月%d日 %H:%M") %>
  </div>
</div>
