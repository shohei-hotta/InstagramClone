<div>
  <h1>投稿確認</h1>
</div>
<div>
  <%= form_with(model: @blog, local: true) do |f| %>
  <% if @blog.image.attached? %>
    <div>
      <%= f.label :image %>
      <%= image_tag @blog.image %>
      <%= f.hidden_field :image, value: f.object.image.signed_id %>
    </div>
  <% end %>
  <div>
    <%= f.label :content %>
    <%= @blog.content %>
    <%= f.hidden_field :content %>
  </div>
  <div>
    <div>
      <%= f.submit "投稿" %>
    </div>
    <div>
      <%= f.submit "戻る", name: "back" %>
    </div>
  </div>
<% end %>
</div>